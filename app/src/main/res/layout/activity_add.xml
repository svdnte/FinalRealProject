<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Назад"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Добавить спонсора" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/surname_edit"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:hint="Фамилия"
        android:inputType="text"/>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:inputType="text"
        android:hint="Имя" />

    <EditText
        android:id="@+id/otch_edit"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:inputType="text"
        android:hint="Отчество" />

    <CheckBox
        android:id="@+id/anon_check_box"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:text="Анонимно" />

    <EditText
        android:id="@+id/sum_edit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="15dp"
        android:hint="Сумма"
        android:inputType="numberDecimal"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="Способ пожертвования" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/nal_radio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:text="Наличные" />

        <RadioButton
            android:id="@+id/card_radio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="48dp"
            android:text="Перевод" />
    </RadioGroup>

    <EditText
        android:id="@+id/info_edit"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:inputType="none"
        android:hint="Контактные данные" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Сохранить" />

</LinearLayout>